@model Data.Home.HomeModel


@{
    ViewBag.Title = "Trang Chủ";
}

<div class="baner">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>

        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/images/baner_1.jpg" alt="san pham ban chay">
            </div>



            <div class="item">
                <img src="~/images/baner_1.jpg" alt="san pham hot">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>


<div class="container">
    <div class="row">
        <div class="col-md-12">

        </div>
    </div>
</div>
<div class="container pad-50">
    <div class="row">
        <div class="col-lg-6 col-xs-12 col-md-12">
            <img src="~/images/banner_2.jpg" class="img-responsive" alt="san pham tieu bieu" />
        </div>
        <div class="col-lg-6 col-xs-12 col-md-12">
            <img src="~/images/banner_3.jpg" class="img-responsive" alt="san pham tieu bieu" />
        </div>
    </div>
</div>






<div class="container pad-50">
    <div class="row">
        <div class="col-md-12">
            <div class="text">
                <h2 class="title-dex"> Hàng mới về</h2>
            </div>
        </div>
    </div>
    <div class="row">
        @if (Model.ListNewsProducts.Count() > 0)
        {
            foreach (var it in Model.ListNewsProducts)
            {
                <div class="col-lg-3 col-xs-6 col-md-6">
                    @{Html.RenderPartial("_product", it);}

                </div>
            }

        }
    </div>
</div>




<div class="container">
    <div class="row">

        <div class="col-lg-12 col-xs-12 col-md-12">
            <img src="~/images/baner_3.jpg" class="img-responsive" alt="san pham tieu bieu" style="margin:auto" />
        </div>
    </div>
</div>
<div class="container pad-50">
    <div class="row">
        <div class="col-lg-12 col-xs-12 col-md-12 ">
            <div class="text">
                <h2 class="title-dex"> sản phẩm bán chạy</h2>
            </div>
        </div>
    </div>
    <div class="row">
        @if (Model.ListSellProducts.Count() > 0)
        {
            foreach (var it in Model.ListSellProducts)
            {
                <div class="col-lg-3 col-xs-6 col-md-6 ">
                    @{Html.RenderPartial("_product", it);}
                </div>
            }

        }

    </div>
</div>
<div class="container pad-50">
    <div class="row">
        <div class="col-md-12">
            <div class="text">
                <h2 class="title-dex"> Tin Tức</h2>
            </div>
        </div>
    </div>
    <div class="row">
        @if (Model.ListNews.Count() >0 )
        {
            foreach (var it in Model.ListNews)
            {
                <div class="col-lg-6 vien col-xs-12 col-md-12">
                    @{Html.RenderPartial("_News", it);}
                </div>
            }

        }
                        

    </div>
</div>
