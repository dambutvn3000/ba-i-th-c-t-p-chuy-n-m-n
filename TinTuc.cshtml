@model Data.News.NewsModel
@{
    ViewBag.Title = "TinTuc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12">
    <p class="title-text">
        Tin tức

    </p>
    <div class="khung3">

        <div class="row">

            <div class="col-lg-12 col-xs-12 col-md-12">
                <div class="text">
                    <a href="/danh-muc-tin/">

                        <h2 style="font-size:20px;float:left">
                            Làm đẹp nhà cần
                        </h2>
                    </a>

                </div>
            </div>
            @if (Model.ListHomeNews.Count() >0 )
            {
                foreach (var it in Model.ListHomeNews)
                {
                    <div class="col-lg-6 vien col-xs-12 col-md-12">

                        @{Html.RenderPartial("_News", it);}

                    </div>
                }
            }

            <div class="box-tintuc">

                <div class="row">
                    <div class="col-lg-12 col-xs-12 col-md-12">
                        <div class="text">
                            <a href="/san-pham/abc">
                                <h2 style="font-size:20px;float:left">
                                    Làm đẹp khác
                                </h2>
                            </a>

                        </div>
                    </div>
                    @if (Model.ListOtherNews.Count() > 0)
                    {
                        foreach (var it in Model.ListOtherNews)
                        {
                            <div class="col-lg-3 vien col-xs-12 col-md-12">
                                @{Html.RenderPartial("_News", it);}
                            </div>
                        }
                    }

                </div>
            </div>
        </div>
    </div>
</div>

